# ============================================
# ECHO INTUNE - ML Service Environment Variables
# ============================================
# 
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
#

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5001
FLASK_ENV=development
# For production: FLASK_ENV=production

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5002
# For production, add your production domains:
# ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
